# ===================================================================
# FICHIER : .gitignore
# Ce fichier spécifie les fichiers et dossiers qui ne doivent pas
# être suivis par Git (version control).
# ===================================================================

# ===================================================================
# DEPENDANCES ET MODULES
# ===================================================================

# Dependencies Node.js (npm)
node_modules/
npm-debug.log*
yarn-debug.log*
yarn-error.log*
package-lock.json

# Dependencies PHP (Composer)
vendor/
composer.lock

# ===================================================================
# FICHIERS DE CONFIGURATION ET ENVIRONNEMENT
# ===================================================================

# Fichiers de configuration d'environnement
.env
.env.local
.env.development.local
.env.test.local
.env.production.local

# Fichiers de configuration sensibles
config/database.php
config/app.php
config/mail.php
config/services.php

# ===================================================================
# FICHIERS DE BUILD ET COMPILATION
# ===================================================================

# Assets compilés par Vite
public/assets/
public/build/
public/dist/

# Fichiers de cache Vite
.vite/
*.local

# ===================================================================
# FICHIERS DE LOGS ET CACHE
# ===================================================================

# Logs
logs/
*.log
npm-debug.log*
yarn-debug.log*
yarn-error.log*
lerna-debug.log*

# Cache
.cache/
.parcel-cache/
.npm
.eslintcache

# ===================================================================
# FICHIERS TEMPORAIRES ET SYSTÈME
# ===================================================================

# Fichiers temporaires
*.tmp
*.temp
*.swp
*.swo
*~

# Fichiers système
.DS_Store
.DS_Store?
._*
.Spotlight-V100
.Trashes
ehthumbs.db
Thumbs.db

# ===================================================================
# FICHIERS DE BASE DE DONNÉES
# ===================================================================

# Fichiers de base de données
*.sqlite
*.sqlite3
*.db
database/database.sqlite

# ===================================================================
# FICHIERS DE TESTS ET COUVERTURE
# ===================================================================

# Rapports de couverture de code
coverage/
*.lcov

# Fichiers de test temporaires
.phpunit.result.cache

# ===================================================================
# FICHIERS D'ÉDITEUR ET IDE
# ===================================================================

# VS Code
.vscode/
!.vscode/settings.json
!.vscode/tasks.json
!.vscode/launch.json
!.vscode/extensions.json

# PHPStorm / IntelliJ
.idea/
*.iml
*.ipr
*.iws

# Sublime Text
*.sublime-project
*.sublime-workspace

# Vim
*.swp
*.swo

# ===================================================================
# FICHIERS DE SÉCURITÉ
# ===================================================================

# Clés privées et certificats
*.pem
*.key
*.crt
*.p12
*.pfx

# Fichiers de configuration sensibles
config/auth.php
config/session.php

# ===================================================================
# FICHIERS DE BACKUP ET ARCHIVES
# ===================================================================

# Fichiers de sauvegarde
*.bak
*.backup
*.old
*.orig

# Archives
*.zip
*.tar.gz
*.rar
*.7z

# ===================================================================
# FICHIERS SPÉCIFIQUES AU PROJET
# ===================================================================

# Fichiers de test de configuration
public/config-test.php
public/dbtest.php

# Fichiers de développement temporaires
*.dev.php
*.test.php

# ===================================================================
# FICHIERS DE DÉPLOIEMENT
# ===================================================================

# Fichiers de déploiement
deploy/
deployment/
*.deploy

# ===================================================================
# FICHIERS DE DOCUMENTATION GÉNÉRÉE
# ===================================================================

# Documentation générée
docs/build/
docs/_build/

# ===================================================================
# FICHIERS DE MÉDIA ET UPLOADS
# ===================================================================

# Fichiers uploadés par les utilisateurs
public/uploads/
public/storage/
storage/app/public/
storage/framework/cache/
storage/framework/sessions/
storage/framework/views/
storage/logs/

# ===================================================================
# FICHIERS DE PERFORMANCE ET MONITORING
# ===================================================================

# Fichiers de performance
.phpunit.result.cache
.php_cs.cache

# ===================================================================
# FICHIERS DE DÉVELOPPEMENT LOCAL
# ===================================================================

# Fichiers spécifiques au développement local
docker-compose.override.yml
docker-compose.local.yml

# ===================================================================
# FICHIERS DE MIGRATION ET SEEDING
# ===================================================================

# Fichiers de migration temporaires
database/migrations/*.php.bak
database/seeds/*.php.bak

